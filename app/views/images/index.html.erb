<h1>Listing images</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Action</th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><img src="<%= image.imgurl %>"/></td>
    <!--<td><%= link_to 'Show', image %></td>-->
    <!--<td><%= link_to 'Edit', edit_image_path(image) %></td>-->
    <td><%= link_to 'Delete', image, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Save', save_image_path(:param1 => @images) %>